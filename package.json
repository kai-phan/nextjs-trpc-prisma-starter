{
  "name": "nextjs-trpc-prisma-starter",
  "version": "1.1.0",
  "private": true,
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/HarrisFauntleroy/nextjs-trpc-prisma-starter"
  },
  "license": "MIT",
  "author": {
    "name": "Harris Fauntleroy",
    "url": "https://github.com/HarrisFauntleroy"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\"",
    "test-dev": "start-server-and-test dev 3000 test",
    "test-start": "start-server-and-test start 3000 test",
    "test-unit": "jest",
    "test-e2e": "playwright test",
    "setup": "run-s deploy-db migrate-db seed-db",
    "docker-use-remote": "docker context use home-server",
    "deploy-db": "run-s docker-use-remote docker-compose up -d postgres postgres-backup redis",
    "deploy:app": "run-s docker-use-remote docker-compose up -d nextjs",
    "seed-db": "prisma db seed",
    "prisma-generate": "prisma generate",
    "prisma-format": "prisma format",
    "migrate-db": "prisma migrate dev",
    "prisma-build": "run-s prisma-format prisma-generate migrate-db",
    "prisma-studio": "prisma studio",
    "reset-db": "docker-compose down --volumes --remove-orphans",
    "up": "yarn upgrade-interactive",
    "up-latest": "yarn up --latest",
    "postinstall": "prisma generate",
    "pre-commit": "lint-staged",
    "prebuild": "prisma generate",
    "build": "next build",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "prepare": "husky install",
    "test": "jest --passWithNoTests",
    "test:ci": "yarn test --ci --coverage --maxWorkers=2",
    "test:watch": "yarn test --watchAll",
    "type-check": "tsc --noEmit",
    "watch": "yarn type-check --watch",
    "start": "next start",
    "storybook": "storybook dev -p 6007",
    "storybook:build": "storybook build",
    "storybook:serve": "http-server storybook-static --port 6007 --silent",
    "build-storybook": "storybook build",
    "clean": "rimraf .turbo node_modules dist tsconfig.tsbuildinfo",
    "dev": "next dev -p 3000",
    "lint": "next lint",
    "lint:fix": "eslint . --fix && yarn format",
    "lint:watch": "yarn esw . --ext .js,.jsx,.ts,.tsx --watch --fix --color --changed --clear",
    "format": "prettier --write ."
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "settings": {
      "import/resolver": {
        "typescript": true,
        "node": true
      },
      "react": {
        "version": "detect"
      }
    },
    "plugins": [
      "@typescript-eslint",
      "simple-import-sort",
      "import",
      "sonarjs",
      "jsx-a11y",
      "prettier"
    ],
    "extends": [
      "next",
      "plugin:@typescript-eslint/recommended",
      "eslint:recommended",
      "plugin:import/typescript",
      "plugin:import/recommended",
      "plugin:sonarjs/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:storybook/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "import/extensions": "off",
      "simple-import-sort/imports": [
        "off",
        {
          "groups": [
            [
              "^react$"
            ],
            [
              "^(ui|common|database|database/generated/prisma-client)$"
            ],
            [
              "^[./]"
            ]
          ]
        }
      ],
      "@next/next/no-html-link-for-pages": [
        "error",
        "pages"
      ]
    },
    "ignorePatterns": [
      "dist"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": ".test.*",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:fix",
      "yarn format"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "strict",
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false,
    "vueIndentScriptAndStyle": false
  },
  "dependencies": {
    "@chakra-ui/icons": "2.0.18",
    "@chakra-ui/react": "^2.6.1",
    "@chakra-ui/theme-tools": "2.0.16",
    "@emotion/react": "11.10.5",
    "@emotion/styled": "11.10.5",
    "@next-auth/prisma-adapter": "1.0.5",
    "@prisma/client": "4.7.1",
    "@trpc/client": "9.27.4",
    "@trpc/next": "9.27.4",
    "@trpc/react": "9.27.4",
    "@trpc/server": "9.27.4",
    "@uiw/react-md-editor": "3.19.7",
    "babel-plugin-superjson-next": "0.4.5",
    "chakra-ui-steps": "^1.8.0",
    "clsx": "1.2.1",
    "framer-motion": "7.6.18",
    "katex": "0.16.3",
    "mermaid": "9.2.2",
    "next": "12.3.4",
    "next-auth": "4.12.2",
    "next-remove-imports": "1.0.8",
    "next-seo": "^5.14.1",
    "nodemailer": "6.8.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-focus-lock": "2.9.2",
    "react-hook-form": "7.40.0",
    "react-icons": "4.7.1",
    "react-intl": "6.2.5",
    "react-markdown": "8.0.4",
    "react-query": "3.39.2",
    "react-syntax-highlighter": "15.5.0",
    "redis": "4.5.1",
    "rehype-katex": "6.0.2",
    "rehype-stringify": "9.0.3",
    "remark-breaks": "3.0.2",
    "remark-frontmatter": "4.0.1",
    "remark-gfm": "3.0.1",
    "remark-math": "5.1.1",
    "remark-parse": "10.0.1",
    "remarkable": "2.0.1",
    "start-server-and-test": "1.14.0",
    "superjson": "1.11.0",
    "unified": "10.1.2",
    "uuidv4": "6.2.13",
    "ws": "8.11.0",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@playwright/test": "1.28.1",
    "@trivago/prettier-plugin-sort-imports": "3.4.0",
    "@types/jest": "29.2.3",
    "@types/mermaid": "9.1.0",
    "@types/node": "17.0.45",
    "@types/nodemailer": "6.4.6",
    "@types/react": "18.0.26",
    "@types/ws": "8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "eslint-config-next": "13.3.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "0.19.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-watch": "^8.0.0",
    "husky": "^8.0.2",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.3.1",
    "lint-staged": "13.0.4",
    "npm-run-all": "4.1.5",
    "playwright": "1.28.1",
    "prettier": "2.8.0",
    "prisma": "4.7.1",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "5.0.4"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "prisma": {
    "seed": "yarn ts-node prisma/seed.ts"
  }
}
